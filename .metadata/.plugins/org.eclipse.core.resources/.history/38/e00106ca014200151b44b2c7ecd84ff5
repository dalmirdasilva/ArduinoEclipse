#ifndef __ARDUINO_NAIVE_BAYES_SENSOR_H__
#define __ARDUINO_NAIVE_BAYES_SENSOR_H__ 1

#include "DistanceSensor.h"

class Sensor {

public:

  /**
   * Underling sensor driver.
   */
  DistanceSensor *sensor;

public:

  /**
   * Public constructor.
   *
   * @param sensor        The underling sensor driver.
   */
  Sensor(DistanceSensor *sensor);
};

#endif /* __ARDUINO_NAIVE_BAYES_SENSOR_H__ */
