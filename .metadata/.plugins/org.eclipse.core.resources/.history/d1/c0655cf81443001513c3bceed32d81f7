#ifndef __ARDUINO_BAROMETER_DRIVER_BMP085_BAROMETER_H__
#define __ARDUINO_BAROMETER_DRIVER_BMP085_BAROMETER_H__ 1

#include <Barometer.h>

class BMP085Barometer: public Barometer {
    unsigned char ac1;
    unsigned char ac2;
    unsigned char ac3;
    unsigned char ac4;
    unsigned char ac5;
    unsigned char ac6;
    unsigned char b1;
    unsigned char b2;
    unsigned char mb;
    unsigned char mc;
    unsigned char md;
public:

    virtual short getTemperature();

    virtual short getPressure();

private:

    void readCallibration();

    unsigned short readTemperature();

    unsigned short readPressure();
};

#endif // __ARDUINO_BAROMETER_DRIVER_BMP085_BAROMETER_H__
