/**
 * srofs - Simple Resource Oriented File System
 * 
 * srofs_util.c
 * 
 * Util lib for rs
 * 
 * @author Dalmir da Silva <dalmirdasilva@gmail.com>
 */

#ifndef __SDCC_RS_UTIL_C__
#define __SDCC_RS_UTIL_C__ 1

#include "srofs_util.h"

void _srofs_write_srofs_to_disc(srofs_driver_t driver, srofs_t *rs) {
    uint8_t i;
    uint8_t *rsp;
    srofs_memory_address_t address = RS_FIRST_ADDRESS_OF_MEMORY;
    rsp = (uint8_t *) rs;
    for (i = 0; i < sizeof (srofs_t); i++) {
        _srofs_io_write(driver, address++, *(rsp++));
    }
}

void _srofs_read_srofs_from_disc(srofs_driver_t driver, srofs_t *rs) {
    uint8_t i;
    uint8_t *rsp;
    srofs_memory_address_t address = RS_FIRST_ADDRESS_OF_MEMORY;
    rsp = (uint8_t *) rs;
    for (i = 0; i < sizeof (srofs_t); i++) {
        *(rsp++) = _srofs_io_read(driver, address++);
    }
}

srofs_memory_address_t _srofs_alloc_cluster(srofs_t *rs) {
    srofs_memory_address_t address;
    uint8_t i;
    address = rs->cluster_table_address;
    for (i = 0; i < rs->cluster_count; i++) {
        if (_srofs_is_free_cluster(rs, (srofs_cluster_t) i)) {
            _srofs_decrease_free_clusters(rs, 1);
            return address;
        }
        address += rs->sizeof_cluster;
    }
    return RS_NULL_CLUSTER_ADDRESS;
}

uint8_t _srofs_is_free_cluster(srofs_t *rs, srofs_cluster_t cluster) {
    return (cluster == _srofs_prev_cluster_by_cluster(rs, cluster)) \
        && (cluster == _srofs_next_cluster_by_cluster(rs, cluster));
}

void _srofs_format_cluster(srofs_t *rs, srofs_cluster_t cluster) {
    srofs_memory_address_t address;
    address = _srofs_cluster_to_address(rs, cluster);
    _srofs_io_write(rs->driver, CLUSTER_ADDRESS_TO_NEXT(address), cluster);
    _srofs_io_write(rs->driver, CLUSTER_ADDRESS_TO_PREV(address), cluster);
}

void _srofs_free_cluster(srofs_t *rs, srofs_cluster_t cluster) {
    _srofs_format_cluster(rs, cluster);
    _srofs_increase_free_clusters(rs, 1);
}

void _srofs_create_cluster_chain(srofs_t *rs, srofs_cluster_t prev_cluster, srofs_cluster_t next_cluster) {
    srofs_memory_address_t address;
    if (prev_cluster != RS_INEXISTENT_CLUSTER) {
        address = _srofs_cluster_to_address(rs, prev_cluster);
        _srofs_io_write(rs->driver, CLUSTER_ADDRESS_TO_NEXT(address), (uint8_t) next_cluster);
    }
    if (next_cluster != RS_INEXISTENT_CLUSTER) {
        address = _srofs_cluster_to_address(rs, next_cluster);
        _srofs_io_write(rs->driver, CLUSTER_ADDRESS_TO_PREV(address), (uint8_t) prev_cluster);
    }
}

void _srofs_check_for_eor_reached(srofs_resource_t *resource) {
    if (resource->current_position >= resource->size) {
        resource->flags |= RS_RESOURCE_FLAG_BIT_EOR_REACHED;
    } else {
        resource->flags &= ~RS_RESOURCE_FLAG_BIT_EOR_REACHED;
    }
}

uint8_t _srofs_is_eor_reached(srofs_resource_t *resource) {
    return resource->flags & RS_RESOURCE_FLAG_BIT_EOR_REACHED;
}

uint8_t _srofs_check_for_availability(srofs_t *rs, srofs_resource_t *resource) {
    srofs_memory_address_t address;
    srofs_cluster_t cluster;
    _srofs_check_for_eor_reached(resource);
    if (resource->cluster_offset >= rs->sizeof_cluster) {
        if (srofs_eor(resource)) {
            address = _srofs_alloc_cluster(rs);
            if (address == RS_NULL_CLUSTER_ADDRESS) {
                return 0;
            }
            cluster = _srofs_address_to_cluster(rs, address);
            _srofs_create_cluster_chain(rs, resource->current_cluster, cluster);
            resource->current_cluster = cluster;
        } else {
            resource->current_cluster = _srofs_next_cluster_by_cluster(rs, resource->current_cluster);
        }
        resource->cluster_offset = rs->sizeof_cluster_control;
    }
    return 1;
}

uint8_t _srofs_move_current_position_ahead(srofs_t *rs, srofs_resource_t *resource, srofs_seek_int_t offset) {
    uint8_t until_the_end;
    uint8_t how_many_clustes_ahead;
    uint8_t i;
    resource->current_position += offset;
    until_the_end = (rs->sizeof_cluster - resource->cluster_offset);
    if (offset <= until_the_end) {
        resource->cluster_offset += offset;
        return 1;
    }
    offset -= until_the_end;
    how_many_clustes_ahead = (offset / rs->sizeof_cluster_data) + 1;
    resource->cluster_offset = (offset % rs->sizeof_cluster_data) + rs->sizeof_cluster_control;
    for (i = 0; i < how_many_clustes_ahead; i++) {
        resource->current_cluster = _srofs_next_cluster_by_cluster(rs, resource->current_cluster);
    }
    return 1;
}

uint8_t _srofs_move_current_position_back(srofs_t *rs, srofs_resource_t *resource, srofs_seek_int_t offset) {
    uint8_t until_the_begin;
    uint8_t how_many_clustes_back;
    uint8_t i;
    resource->current_position -= offset;
    until_the_begin = (resource->cluster_offset - rs->sizeof_cluster_control);
    if (offset <= until_the_begin) {
        resource->cluster_offset -= offset;
        return 1;
    }
    offset -= until_the_begin;
    how_many_clustes_back = (offset / rs->sizeof_cluster_data);
    if ((offset % rs->sizeof_cluster_data) != 0) {
        how_many_clustes_back++;
    }
    resource->cluster_offset = rs->sizeof_cluster - (offset % rs->sizeof_cluster_data);
    for (i = 0; i < how_many_clustes_back; i++) {
        resource->current_cluster = _srofs_prev_cluster_by_cluster(rs, resource->current_cluster);
    }
    return 1;
}

void _srofs_format_resorce_descriptor(srofs_t *rs, srofs_resource_descriptor_t resource_descriptor) {
    int i;
    srofs_memory_address_t address;
    address = _srofs_resource_descriptor_to_address(rs, resource_descriptor);
    for (i = 0; i < rs->sizeof_resource_descriptor; i++) {
        _srofs_io_write(rs->driver, address + i, 0x00);
    }
}

uint8_t _srofs_is_driver_monted(srofs_driver_t driver) {
    return srofs_global_flags.driver_mouted & (1 << driver);
}

void _srofs_set_driver_monted(srofs_driver_t driver, uint8_t is) {
    if (is) {
        srofs_global_flags.driver_mouted |= (1 << driver);
    } else {
        srofs_global_flags.driver_mouted &= ~(1 << driver);
    }
}

void _srofs_free_resource_descriptors(srofs_t *rs) {
    uint8_t i;
    for (i = 0; i < rs->resource_descriptor_count; i++) {
        _srofs_free_resource_descriptor(rs, i);
    }
}

void _srofs_free_resource_descriptor(srofs_t *rs, srofs_resource_descriptor_t resource_descriptor) {
    srofs_memory_address_t address;
    uint8_t flags;
    address = _srofs_resource_descriptor_to_address(rs, resource_descriptor);
    flags = _srofs_io_read(rs->driver, RD_ADDRESS_TO_FLAG(address));
    flags &= ~(RS_RESOURCE_FLAG_BIT_OPENED | RS_RESOURCE_FLAG_BIT_READ_ONLY);
    _srofs_io_write(rs->driver, RD_ADDRESS_TO_FLAG(address), flags);
}

void _srofs_format_resource_clusters(srofs_t *rs, srofs_resource_t *resource) {
    uint8_t freed_clusters;
    freed_clusters = _srofs_format_clustesrofs_chain(rs, resource->first_cluster);
    _srofs_increase_free_clusters(rs, freed_clusters);
}

uint8_t _srofs_format_clustesrofs_chain(srofs_t *rs, srofs_cluster_t cluster) {
    srofs_cluster_t next_cluster;
    uint8_t formated_clusters = 0;
    do {
        next_cluster = _srofs_next_cluster_by_cluster(rs, cluster);
        _srofs_format_cluster(rs, cluster);
        formated_clusters++;
        if (next_cluster == RS_INEXISTENT_CLUSTER || next_cluster == cluster) {
            break;
        }
        cluster = next_cluster;
    } while (1);
    return formated_clusters;
}

uint8_t _srofs_has_invalid_attributes(srofs_t *rs) {
    if (rs->sizeof_resource_descriptor_table != (rs->sizeof_resource_descriptor * rs->resource_descriptor_count)) {
        return 1;
    }
    if (rs->sizeof_cluster_table != (rs->sizeof_cluster * rs->cluster_count)) {
        return 2;
    }
    if (rs->sizeof_cluster != (rs->sizeof_cluster_control + rs->sizeof_cluster_data)) {
        return 3;
    }
    if (rs->memory_size != rs->sizeof_cluster_table + rs->cluster_table_address) {
        return 4;
    }
    return 0;
}

#endif // __SDCC_RS_UTIL_C__
